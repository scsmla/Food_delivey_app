<div class="col-md-3">
  <div class="thumbnail">

    <% if restaurant.image? %>
      <%= image_tag restaurant.image.url %>
    <% else %>
      <%= image_tag("coming_soon.jpg", height: "180", width: "240") %>
    <% end %>
    <div class="caption">
      <p><strong><%= link_to restaurant.name, restaurant %></strong></p>
      <p><%= restaurant.location %></p>
    </div>
  </div>
</div>
