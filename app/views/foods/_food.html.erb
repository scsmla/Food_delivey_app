<div class="row">
  <div class="col-md-2">
    <% if food.image? %>
      <%= image_tag(food.image.url, height: "80", width: "80") %>
    <% else %>
      <%= image_tag("coming_soon.jpg", height: "80", width: "80") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h4><b><%= food.name %></b></h4>
    <p><%= t("number_of_ordered") %>: <%= food.number_of_ordered %></p>
  </div>
  <div class="col-md-3">
    <p style="color: blue; font-size: 18px;"><b><%= food.price %>d</b></p>
    <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span><%= t("add") %></button>
  </div>
</div>

